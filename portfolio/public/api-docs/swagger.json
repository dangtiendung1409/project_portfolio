{
  "swagger": "2.0",
  "info": {
    "description": "\n\nHeader -> api_key :  \n\n",
    "version": "1.0.0",
    "title": "Minimal"
  },
  "host": "127.0.0.1:8000",
  "basePath": "/api",
  "tags": [
    {
      "name": "User",
      "description": "All User Operations"
    },
    {
      "name": "HomePage",
      "description": "HomePage Data Operations"
    },
    {
       "name": "AccountUser",
       "description": "AccountUser Data Operations"
    }

  ],
  "paths": {
      "/login": {
          "post": {
              "tags": ["User"],
              "summary": "User Login",
              "operationId": "login",
              "produces": ["application/json"],
              "parameters": [
                  {
                      "name": "email",
                      "in": "formData",
                      "description": "Enter Email",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "password",
                      "in": "formData",
                      "description": "Enter Password",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Successful login",
                      "schema": {
                          "$ref": "#/definitions/loginResponse"
                      }
                  },
                  "401": {
                      "description": "Invalid credentials"
                  },
                  "403": {
                      "description": "Account is locked"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/register": {
          "post": {
              "tags": [
                  "User"
              ],
              "summary": "User Registration",
              "operationId": "registerUser",
              "produces": [
                  "application/json"
              ],
              "parameters": [
                  {
                      "name": "fullName",
                      "in": "formData",
                      "description": "Full name of the user",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "email",
                      "in": "formData",
                      "description": "Email address",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "password",
                      "in": "formData",
                      "description": "Password",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "password_confirmation",
                      "in": "formData",
                      "description": "Password confirmation",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Registration successful"
                  },
                  "400": {
                      "description": "Validation error"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/logout": {
          "post": {
              "tags": [
                  "User"
              ],
              "summary": "User Logout",
              "operationId": "logoutUser",
              "produces": [
                  "application/json"
              ],
              "parameters": [
                  {
                      "name": "Authorization",
                      "in": "header",
                      "description": "Bearer token for authentication",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Logout successful"
                  },
                  "401": {
                      "description": "Unauthorized"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/user": {
          "get": {
              "tags": ["User"],
              "summary": "Get User Info",
              "operationId": "getUserInfo",
              "produces": ["application/json"],
              "parameters": [
                  {
                      "name": "Authorization",
                      "in": "header",
                      "description": "Bearer token for authentication",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "User info retrieved successfully",
                      "schema": {
                          "$ref": "#/definitions/user"
                      }
                  },
                  "401": {
                      "description": "Unauthorized"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/getPhotoData": {
          "get": {
              "tags": [
                  "HomePage"
              ],
              "summary": "Get Photo Data",
              "operationId": "getPhotoData",
              "produces": [
                  "application/json"
              ],
              "parameters": [],
              "responses": {
                  "200": {
                      "description": "Photo data retrieved successfully",
                      "schema": {
                          "type": "array",
                          "items": {
                              "type": "object",
                              "properties": {
                                  "id": {
                                      "type": "integer"
                                  },
                                  "url": {
                                      "type": "string"
                                  },
                                  "description": {
                                      "type": "string"
                                  }
                              }
                          }
                      }
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/getFollowData": {
          "get": {
              "tags": [
                  "HomePage"
              ],
              "summary": "Get Follow Data",
              "operationId": "getFollowData",
              "produces": [
                  "application/json"
              ],
              "parameters": [],
              "responses": {
                  "200": {
                      "description": "Follow data retrieved successfully",
                      "schema": {
                          "type": "array",
                          "items": {
                              "type": "object",
                              "properties": {
                                  "id": {
                                      "type": "integer"
                                  },
                                  "user_id": {
                                      "type": "integer"
                                  },
                                  "follower_id": {
                                      "type": "integer"
                                  }
                              }
                          }
                      }
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/getPhotoDetail/{token}": {
          "get": {
              "tags": [
                  "HomePage"
              ],
              "summary": "Get Photo Detail by Token",
              "operationId": "getPhotoDetail",
              "produces": [
                  "application/json"
              ],
              "parameters": [
                  {
                      "name": "token",
                      "in": "path",
                      "description": "Unique token representing the photo detail",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Photo details retrieved successfully",
                      "schema": {
                          "type": "object",
                          "properties": {
                              "id": {
                                  "type": "integer"
                              },
                              "image_url": {
                                  "type": "string"
                              },
                              "description": {
                                  "type": "string"
                              },
                              "created_at": {
                                  "type": "string",
                                  "format": "date-time"
                              },
                              "updated_at": {
                                  "type": "string",
                                  "format": "date-time"
                              }
                          }
                      }
                  },
                  "404": {
                      "description": "Photo detail not found"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/galleries": {
          "get": {
              "tags": ["AccountUser"],
              "summary": "Get all galleries of the authenticated user",
              "operationId": "getUserGalleries",
              "produces": ["application/json"],
              "parameters": [
                  {
                      "name": "Authorization",
                      "in": "header",
                      "description": "Bearer token for authentication",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Galleries retrieved successfully",
                      "schema": {
                          "type": "array",
                          "items": {
                              "type": "object",
                              "properties": {
                                  "id": { "type": "integer" },
                                  "galleries_name": { "type": "string" },
                                  "galleries_description": { "type": "string" },
                                  "visibility": { "type": "integer" },
                                  "user_id": { "type": "integer" },
                                  "created_at": { "type": "string", "format": "date-time" },
                                  "updated_at": { "type": "string", "format": "date-time" }
                              }
                          }
                      }
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/add-gallery": {
          "post": {
              "tags": ["AccountUser"],
              "summary": "Add a new gallery",
              "operationId": "addGallery",
              "produces": ["application/json"],
              "parameters": [
                  {
                      "name": "Authorization",
                      "in": "header",
                      "description": "Bearer token for authentication",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "title",
                      "in": "formData",
                      "description": "Title of the gallery",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "description",
                      "in": "formData",
                      "description": "Description of the gallery",
                      "required": false,
                      "type": "string"
                  },
                  {
                      "name": "visibility",
                      "in": "formData",
                      "description": "Visibility of the gallery (0 for private, 1 for public)",
                      "required": true,
                      "type": "integer",
                      "enum": [0, 1]
                  }
              ],
              "responses": {
                  "201": {
                      "description": "Gallery created successfully",
                      "schema": {
                          "type": "object",
                          "properties": {
                              "message": {
                                  "type": "string"
                              },
                              "gallery": {
                                  "type": "object",
                                  "properties": {
                                      "id": {
                                          "type": "integer"
                                      },
                                      "galleries_name": {
                                          "type": "string"
                                      },
                                      "galleries_description": {
                                          "type": "string"
                                      },
                                      "visibility": {
                                          "type": "integer"
                                      },
                                      "user_id": {
                                          "type": "integer"
                                      },
                                      "created_at": {
                                          "type": "string",
                                          "format": "date-time"
                                      },
                                      "updated_at": {
                                          "type": "string",
                                          "format": "date-time"
                                      }
                                  }
                              }
                          }
                      }
                  },
                  "400": {
                      "description": "Validation error"
                  },
                  "422": {
                      "description": "Validation error (e.g., invalid visibility value)"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/liked-photos": {
          "get": {
              "tags": [
                  "AccountUser"
              ],
              "summary": "Get photos liked by the user",
              "operationId": "getLikedPhotos",
              "produces": [
                  "application/json"
              ],
              "parameters": [
                  {
                      "name": "Authorization",
                      "in": "header",
                      "description": "Bearer token for authentication",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Liked photos retrieved successfully",
                      "schema": {
                          "type": "array",
                          "items": {
                              "type": "object",
                              "properties": {
                                  "id": {
                                      "type": "integer"
                                  },
                                  "photo_image": {
                                      "type": "object",
                                      "properties": {
                                          "id": {
                                              "type": "integer"
                                          },
                                          "image_url": {
                                              "type": "string"
                                          },
                                          "photo": {
                                              "type": "object",
                                              "properties": {
                                                  "id": {
                                                      "type": "integer"
                                                  },
                                                  "title": {
                                                      "type": "string"
                                                  },
                                                  "user": {
                                                      "type": "object",
                                                      "properties": {
                                                          "id": {
                                                              "type": "integer"
                                                          },
                                                          "name": {
                                                              "type": "string"
                                                          },
                                                          "avatar": {
                                                              "type": "string"
                                                          }
                                                      }
                                                  }
                                              }
                                          }
                                      }
                                  }
                              }
                          }
                      }
                  },
                  "401": {
                      "description": "Unauthorized"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/update-profile": {
          "post": {
              "tags": ["AccountUser"],
              "summary": "Update User Profile",
              "operationId": "updateProfile",
              "produces": ["application/json"],
              "consumes": ["multipart/form-data"],
              "parameters": [
                  {
                      "name": "Authorization",
                      "in": "header",
                      "description": "Bearer token for authentication",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "username",
                      "in": "formData",
                      "description": "Username of the user",
                      "required": false,
                      "type": "string"
                  },
                  {
                      "name": "email",
                      "in": "formData",
                      "description": "Email address",
                      "required": false,
                      "type": "string"
                  },
                  {
                      "name": "bio",
                      "in": "formData",
                      "description": "Bio of the user",
                      "required": false,
                      "type": "string"
                  },
                  {
                      "name": "profile_picture",
                      "in": "formData",
                      "description": "Profile picture file",
                      "required": false,
                      "type": "file"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Profile updated successfully",
                      "schema": {
                          "$ref": "#/definitions/user"
                      }
                  },
                  "400": {
                      "description": "Validation error"
                  },
                  "401": {
                      "description": "Unauthorized"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/change-password": {
          "post": {
              "tags": ["AccountUser"],
              "summary": "Change User Password",
              "operationId": "changePassword",
              "produces": ["application/json"],
              "parameters": [
                  {
                      "name": "Authorization",
                      "in": "header",
                      "description": "Bearer token for authentication",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "current_password",
                      "in": "formData",
                      "description": "Current password of the user",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "new_password",
                      "in": "formData",
                      "description": "New password of the user",
                      "required": true,
                      "type": "string"
                  },
                  {
                      "name": "new_password_confirmation",
                      "in": "formData",
                      "description": "New password confirmation",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Password changed successfully"
                  },
                  "400": {
                      "description": "Current password is incorrect"
                  },
                  "422": {
                      "description": "Validation error"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      },
      "/notifications": {
          "get": {
              "tags": ["Notification"],
              "summary": "Get all notifications for the current user",
              "operationId": "getUserNotifications",
              "produces": ["application/json"],
              "parameters": [
                  {
                      "name": "Authorization",
                      "in": "header",
                      "description": "Bearer token for authentication",
                      "required": true,
                      "type": "string"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Notifications retrieved successfully",
                      "schema": {
                          "type": "array",
                          "items": {
                              "$ref": "#/definitions/Notification"
                          }
                      }
                  },
                  "401": {
                      "description": "Unauthorized"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
          }
      }
},

  "securityDefinitions": {
    "APIKeyHeader": {
      "type": "apiKey",
      "in": "header",
      "name": "api-key"
    }
  },
    "definitions": {
        "user": {
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "number"
                },
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            }
        },
        "loginResponse": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string",
                    "description": "JWT token for the user"
                },
                "user": {
                    "$ref": "#/definitions/user"
                }
            }
        }
    },
  "schemes": [
    "http",
    "https"
  ]
}
